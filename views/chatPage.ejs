<%- include('./includes/header.ejs') %>

<div class="chat-wrap">
   <div class="userInfo-wrap">
        <h3>CurrentUser Info</h3>
        <p>UserId: <span class="current-user-id"><%= user.userId %></span></p>
        <p>Name: <span class="current-user-name"><%= user.name %></span></p>
        <p>Email: <span class="current-user-email"><%= user.email %></span></p>
        <p>ContactPhone: <span class="current-user-phone"><%= user.contactPhone %></span></p>
        <p><span class="ws-server-url"><%= wsServerUrl %></span></p>
   </div>
   <div class="avalible-users">
        <h3>Avalible Users (id):</h3>
        <ul class="other-users">
            <li>Your ID : <%= user.userId %></li>
