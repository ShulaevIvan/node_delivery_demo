            <button class="get-history">get history ws</button>
        </div>

        <div class="send-message-demo-wrap">
            <button class="send-message">send Message ws</button>
        </div>
   </div>
  
   

    <div class="chat-window-wrap chat-hidden">
        <div class="chat-main-row">
            <div class="chat-messages">
            </div>
        </div>
        
        <div class="chat-keyboard-row">
            <div class="chat-keyboard"><textarea class="chat-input"></textarea></div>
            <div class="chat-send-btn-wrap"><button class="chat-send-btn">Send message</button></div>
        </div>
    </div>

</div>

